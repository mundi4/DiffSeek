{
	"name": "diffseek",
	"private": true,
	"version": "1.0.0",
	"type": "module",
	"main": "electron/main.js",
	"homepage": "./",
	"scripts": {
		"dev": "vite",
		"build_DO_NOT_USE_ME": "tsc && vite build",
		"build2": "node scripts/build.mjs && node scripts/make-html.mjs",
		"lint": "eslint .",
		"preview": "vite preview",
		"electron": "electron .",
		"electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
		"electron:pack": "npm run build2 && electron-builder --dir"
	},
	"dependencies": {
		"@radix-ui/react-dropdown-menu": "^2.1.16",
		"@radix-ui/react-scroll-area": "^1.2.10",
		"@radix-ui/react-slot": "^1.2.3",
		"@radix-ui/react-toggle": "^1.1.10",
		"@radix-ui/react-toggle-group": "^1.1.11",
		"@vanilla-extract/dynamic": "^2.1.5",
		"@vanilla-extract/recipes": "^0.5.7",
		"clsx": "^2.1.1",
		"jotai": "^2.13.1",
		"lucide-react": "^0.541.0",
		"pixelmatch": "^7.1.0",
		"radix-ui": "^1.4.3",
		"react": "^19.1.1",
		"react-dom": "^19.1.1"
	},
	"devDependencies": {
		"@eslint/js": "^9.33.0",
		"@types/node": "^24.3.0",
		"@types/react": "^19.1.10",
		"@types/react-dom": "^19.1.7",
		"@vanilla-extract/vite-plugin": "^5.1.1",
		"@vitejs/plugin-react-swc": "^4.0.1",
		"archiver": "^7.0.1",
		"concurrently": "^9.2.1",
		"electron": "^38.0.0",
		"electron-builder": "^26.0.12",
		"eslint": "^9.33.0",
		"eslint-plugin-react-hooks": "^5.2.0",
		"eslint-plugin-react-refresh": "^0.4.20",
		"globals": "^16.3.0",
		"rollup-plugin-visualizer": "^6.0.3",
		"typescript": "~5.9.2",
		"typescript-eslint": "^8.40.0",
		"vite": "^7.1.3",
		"vite-plugin-svgr": "^4.3.0",
		"wait-on": "^8.0.4"
	},
	"build": {
		"appId": "com.diffseek.app",
		"productName": "DiffSeek",
		"directories": {
			"output": "dist"
		},
		"files": [
			"build/**/*",
			"dist/**/*",
			"electron/**/*",
			"package.json"
		],
		"win": {
			"target": "portable",
			"icon": "public/favicon.ico"
		},
		"mac": {
			"target": "dmg",
			"icon": "public/favicon.ico"
		},
		"linux": {
			"target": "AppImage",
			"icon": "public/favicon.ico"
		}
	}
}
